<%- include('../partials/header') %>

<form id="new-form" action="/flights/" method="POST" autocomplete="off"> 
  <label>Airline:</label>
    <select name="airline">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>  
  <label>Airport:</label>
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN" selected>DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
  <label>Flight Number</label>
    <input type="number" name="flightNum">
  <label>Depart</label>
  <input type="datetime-local" id="depart"
       name="depart" 
       min="2023-01-07T00:00" max="2024-12-31T00:00">
  <button type="submit">Save</button>
</form>

<%- include('../partials/footer') %>